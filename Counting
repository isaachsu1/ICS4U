#Define the Function
def counting():
  #Prompt the user for a number n
  n = int(input("Enter a number to generate its pattern: "))
  #Use a nested loop to generate the pattern:
  for i in range(1, n+1):
      for o in range(1, i+1):
        #Print o followed by a space and a newline character.
          print(o, end=" ")
      print()


counting()   
